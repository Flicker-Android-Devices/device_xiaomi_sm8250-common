type xiaomidolby_app, domain;
typeattribute xiaomidolby_app mlstrustedsubject;

app_domain(xiaomidolby_app)

# Access standard system services
allow xiaomidolby_app activity_service:service_manager find;
allow xiaomidolby_app app_api_service:service_manager find;
allow xiaomidolby_app audioserver_service:service_manager find;
allow xiaomidolby_app drmserver_service:service_manager find;
allow xiaomidolby_app mediaextractor_service:service_manager find;
allow xiaomidolby_app mediametrics_service:service_manager find;
allow xiaomidolby_app mediaserver_service:service_manager find;

# Allow reading and writing shared prefs
allow xiaomidolby_app system_app_data_file:dir create_dir_perms;
allow xiaomidolby_app system_app_data_file:{ file lnk_file } create_file_perms;

# Dolby
allow xiaomidolby_app hal_dms_hwservice:hwservice_manager find;
binder_call(xiaomidolby_app, hal_dms_default)

allow devicesettings_app exported_system_prop:file read;
